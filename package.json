{
  "name": "lit-listener-sdk",
  "version": "1.0.0",
  "description": "The LitListenerSDK enables developers with an easy interface to automate responses from webhooks, subscribed on-chain events and intervals through triggered callback functions and the use of PKPs.",
  "main": "dist/src/index.ts",
  "module": "dist/index.m.ts",
  "unpkg": "dist/index.umd.ts",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "hardhat-test": "npx hardhat test",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build": "tsc --declaration",
    "postinstall": "typechain --target ethers-v5 --out-dir typechain-types/contracts './src/abis/*.json'",
    "build-publish": "npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DIGITALAX/LitListenerSDK.git"
  },
  "author": "Emma-Jane MacKinnon-Lee",
  "license": "UNLICENSE",
  "bugs": {
    "url": "https://github.com/DIGITALAX/LitListenerSDK/issues"
  },
  "directories": {
    "test": "test"
  },
  "homepage": "https://github.com/DIGITALAX/LitListenerSDK#readme",
  "dependencies": {
    "@lit-protocol/lit-node-client": "^2.2.24",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "bs58": "^5.0.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "ipfs-only-hash": "^4.0.0",
    "siwe": "^2.1.3",
    "typechain": "^8.1.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/contracts": "^4.8.0",
    "@types/bs58": "^4.0.1",
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.2.x",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.7",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "hardhat": "^2.12.2",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^29.2.x",
    "jsdoc": "^4.0.0",
    "prettier": "^2.7.1",
    "solidity-coverage": "^0.8.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}
